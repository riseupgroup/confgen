[Interface]
PrivateKey = {{privkey}}
ListenPort = {{listen_port}}
Address = {{self_ll_ipv6}}/64 # no idea why it has to be /64 not /128
PostUp = ip addr add {{self_ipv4}} peer {{peer_ipv4}}/32 dev %i # I have no idea why this is needed
PostUp = ip addr add {{self_ipv6}}/128 peer {{peer_ipv6}}/128 dev %i # I have no idea why this is needed
PostUp = sysctl -w net.ipv6.conf.%i.autoconf=0


[Peer]
PublicKey = {{peer_pubkey}}
Endpoint =  {{peer_endpoint}}
AllowedIPs = 172.16.0.0/12, 10.0.0.0/8, fd00::/8, fe80::/10
PersistentKeepalive = 25
